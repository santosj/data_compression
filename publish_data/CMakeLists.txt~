cmake_minimum_required(VERSION 2.8.3)
project(publish_data)

set( CMAKE_CXX_FLAGS "-fpermissive" )
find_package(catkin REQUIRED COMPONENTS roscpp rospy sensor_msgs geometry_msgs tf genmsg octomap_msgs pcl_conversions pcl_ros)


find_package(octomap REQUIRED) 
include_directories(${OCTOMAP_INCLUDE_DIRS}) 
link_libraries( ${OCTOMAP_LIBRARIES}) 

## Generate added messages and services
generate_messages(DEPENDENCIES sensor_msgs geometry_msgs tf)

## Declare a catkin package
catkin_package()

## Build talker and listener
include_directories(include ${catkin_INCLUDE_DIRS})

add_executable(publish_data src/publish_data.cpp)
target_link_libraries(publish_data ${catkin_LIBRARIES})

add_executable(search_octo src/search_octo.cpp)
target_link_libraries(search_octo ${catkin_LIBRARIES})


